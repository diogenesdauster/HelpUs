<Alloy>
	<Tab id="doacoesTab">
		<Window>
			<TableView onClick="showDetails" id="myTable" dataCollection="doacoes" >
				<TableViewRow identificador="{alloy_id}" >
					<View id="view">
						<ImageView id="image" image="{foto}" />
						<View id="viewDados">
							<Label id="descr" text="{descricao}"/>
						</View>
					</View>
				</TableViewRow>
			</TableView>
		</Window>
	</Tab>
</Alloy>